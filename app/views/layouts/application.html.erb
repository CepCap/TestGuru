<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <h1> <%= link_to 'TestGuru', root_path %> </h1>
  </head>

  <body>
    <% if user_signed_in? %>
      <p class:"nav user"> Welcome, <b> <%= current_user.email %></b> Guru.   
      </p>
    <% else %>
      <p class:"nav user"> Welcome, Guest!
    <% end %>

    <%= render 'shared/flash' %>

    <%= yield %>
    <%= render "layouts/footer" %>
  </body>
</html>
